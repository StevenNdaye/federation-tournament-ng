// firestore.rules
rules_version = '2';
service cloud.firestore {
  match /databases/{db}/documents {

    // Admin check: user must be signed in AND have a doc in admins/{uid}
    function isAdmin() {
      return request.auth != null
        && exists(/databases/$(db)/documents/admins/$(request.auth.uid));
    }

    // Public can READ matches; only admin can WRITE
    match /matches/{id} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // (Optional) precomputed scorers doc/collection â€” same policy as matches
    match /topScorers/{doc} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Federations/Teams: public read, admin write
    match /federations/{id} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // User roles: user can read their own role; only admin can write
    match /userRoles/{uid} {
      allow read: if request.auth != null && request.auth.uid == uid;
      allow write: if isAdmin();
    }

    // Admin list itself: admin-only
    match /admins/{uid} {
      allow read, write: if isAdmin();
    }

    // Everything else: denied by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
