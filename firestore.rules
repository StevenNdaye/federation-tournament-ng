// firestore.rules
rules_version = '2';
service cloud.firestore {
  match /databases/{db}/documents {

    function isSignedIn() {
      return request.auth != null;
    }
    function isAdmin() {
      return isSignedIn() && exists(/databases/$(db)/documents/admins/$(request.auth.uid));
    }

    // Everyone can read matches (public), writes admins only
    match /matches/{id} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Federations public read, admin write
    match /federations/{id} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Mirror of Firebase Auth users
    match /userProfiles/{uid} {
      allow read: if isAdmin() || (isSignedIn() && request.auth.uid == uid);
      allow write: if isAdmin(); // only admins can edit profiles
    }

    // App-visible role doc
    match /userRoles/{uid} {
      allow read: if isAdmin() || (isSignedIn() && request.auth.uid == uid);
      allow write: if isAdmin();
    }

    // Admins list (who is admin)
    match /admins/{uid} {
      allow read, write: if isAdmin();
    }

    match /{document=**} { allow read, write: if false; }
  }
}
